<h1>Log In App</h1>
<% if user_signed_in? %>
<p>Welcome <%= current_user.name %>!</p>
<%= image_tag(current_user.image) %><br>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% else %>
<%= link_to "Sign in", new_user_session_path %><br>
<%= link_to "Sign Up", new_user_registration_path %><br>

<%= link_to image_tag('facebook-button.gif', size: "40", alt: "Sign in with Facebook", html: "Sign in with Facebook"), user_omniauth_authorize_path(:facebook) %>
<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %><br>
<% end -%>